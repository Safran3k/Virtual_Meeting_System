# Run the container with `docker run -p 3000:3000 -t vms-project`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system vms-project && \
          adduser --system -G vms-project vms-project

COPY dist/vms-project vms-project/
RUN chown -R vms-project:vms-project .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix vms-project --omit=dev -f install

CMD [ "node", "vms-project" ]
